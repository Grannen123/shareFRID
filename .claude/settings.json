{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/package.json\" ] && command -v npx &> /dev/null; then npx prettier --write \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(git *)",
      "Bash(prettier *)",
      "Read",
      "Write",
      "Edit"
    ]
  }
}
